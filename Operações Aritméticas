// Recebendo os valores do usuário
var valor1 = parseInt(prompt("Digite o primeiro valor:"));
var valor2 = parseInt(prompt("Digite o segundo valor:"));

// Recebendo a operação do usuário
var operador = prompt("Digite o operador (+, -, *, /):");

// Verificando a operação escolhida e calculando o resultado
var resultado;
switch (operador) {
  case '+':
    resultado = valor1 + valor2;
    break;
  case '-':
    resultado = valor1 - valor2;
    break;
  case '*':
    resultado = valor1 * valor2;
    break;
  case '/':
    resultado = valor1 / valor2;
    break;
  default:
    console.log("Operador inválido");
    break;
}

// Verificando se há sobra na divisão
var sobra = valor1 % valor2;

// Exibindo o resultado
console.log("O resultado da operação é: " + resultado);
console.log("O resultado da sobra na divisão é: " + sobra);
